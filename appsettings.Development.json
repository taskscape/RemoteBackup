{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "FileLogging": {
    "Path": "logs\\backup.log",
    "MinimumLevel": "Debug"
  },
  "BackupOptions": {
    "RunAt": "02:00",
    "HistoryCopies": 5,
    "DefaultTimeoutMinutes": 60,
    "CurrentSubdirectoryName": "current",
    "HistorySubdirectoryName": "_history",
    "Backups": [
      {
        "Name": "SampleBackup",
        "Host": "ftp.example.com",
        "Port": 21,
        "Username": "user",
        "Password": "password",
        "RemotePath": "/",
        "LocalPath": "D:\\Backups",
        "Encryption": "Explicit",
        "Passive": true,
        "AllowInvalidCertificate": false,
        "TimeoutMinutes": 60,
        "HistoryCopies": 5
      },
      {
        "Name": "RemoteZipExample",
        "Mode": "Remote",
        "Host": "ftp.example.com",
        "Port": 21,
        "Username": "user",
        "Password": "password",
        "RemotePath": "/backups",
        "LocalPath": "D:\\Backups\\RemoteZipExample",
        "RemoteTriggerUrls": [
          "https://example.com/api/trigger-files",
          "https://example.com/api/trigger-db"
        ],
        "RemoteTriggerPollIntervalSeconds": 5,
        "RemoteTriggerTimeoutSeconds": 600,
        "Encryption": "Explicit",
        "Passive": true,
        "AllowInvalidCertificate": false,
        "TimeoutMinutes": 60,
        "HistoryCopies": 5,
        "RetentionDays": 14
      }
    ]
  }
}
