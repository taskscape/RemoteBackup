{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "FileLogging": {
    "Path": "logs\\backup.log",
    "MinimumLevel": "Information"
  },
  "BackupOptions": {
    "Host": "FTP_HOST",
    "Username": "FTP_USERNAME",
    "Password": "FTP_PASSWORD",
    "LocalPath": "/",
    "RunAt": "02:00",
    "HistoryCopies": 5,
    "DefaultTimeoutMinutes": 60,
    "RetentionDays": 7,
    "Backups": [
      {
        "Name": "FullMirrorExample",
        "Mode": "Local",
        "Host": "FTP_HOST",
        "Port": 21,
        "Username": "FTP_USERNAME",
        "Password": "FTP_PASSWORD",
        "RemotePath": "/",
        "LocalPath": "/",
        "Encryption": "Explicit",
        "Passive": true,
        "AllowInvalidCertificate": true,
        "OperationTimeoutMinutes": 10,
        "CompletionTimeoutMinutes": 180,
        "HistoryCopies": 5,
        "RetentionDays": 7
      },
      {
        "Name": "ArchivesOnlyExample",
        "Mode": "Local",
        "Host": "FTP_HOST_ARCHIVES",
        "Port": 21,
        "Username": "FTP_USERNAME",
        "Password": "FTP_PASSWORD",
        "RemotePath": "/archives",
        "LocalPath": "/",
        "Encryption": "Explicit",
        "Passive": true,
        "AllowInvalidCertificate": true,
        "CompletionTimeoutMinutes": 180,
        "RetentionDays": 14
      }
    ]
  },
  "ServiceSettings": {
    "StartHour": 2,
    "StartMinute": 0
  }
}